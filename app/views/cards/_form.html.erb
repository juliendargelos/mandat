<%= form_for(card, html:{class:"col-md-6 col-md-offset-3"}) do |f| %>
<% if card.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(card.errors.count, "error") %>
    prohibited this card from being saved:</h2>

  <ul>
    <% card.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
  <%= f.label :title , class:"col-md-4 col-form-label"%>
  <div class="col-md-8"><%= f.text_field :title, class: "form-control" %></div>
</div>

<div class="form-group row">
  <%= f.label :desc , class:"col-md-4 col-form-label"%>
  <div class="col-md-8"><%= f.text_area :desc, class: "form-control" %></div>
</div>

<div class="form-group row">
  <%= f.label :budget_oui , class:"col-md-4 col-form-label"%>
  <div class="col-md-8"><%= f.number_field :budget_oui, class: "form-control" %></div>
</div>

<div class="form-group row">
  <%= f.label :employers_oui , class:"col-md-4 col-form-label"%>
  <div class="col-md-8"><%= f.number_field :employers_oui, class: "form-control" %></div>
</div>

<div class="form-group row">
  <%= f.label :population_oui, class:"col-md-4 col-form-label" %>
  <div class="col-md-8"><%= f.number_field :population_oui, class: "form-control" %></div>
</div>
<div class="form-group row">
  <%= f.label :budget_non, class:"col-md-4 col-form-label" %>
  <div class="col-md-8"><%= f.number_field :budget_non, class: "form-control" %></div>
</div>

<div class="form-group row">
  <%= f.label :employers_non, class:"col-md-4 col-form-label" %>
  <div class="col-md-8"><%= f.number_field :employers_non, class: "form-control" %></div>
</div>

<div class="form-group row">
  <%= f.label :population_non, class:"col-md-4 col-form-label" %>
  <div class="col-md-8"><%= f.number_field :population_non, class: "form-control" %></div>
</div>
<div class="form-group">
  <%= f.label :image %>
  <div class="btn btn-default fileinput-button">
    <div>Select file <%= f.file_field :image, class: "" %></div>
  </div>
</div>
<%= f.submit class: "btn btn-default"%>

<% end %>
