<div class="cards">
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-sm-offset-8 col-md-2 col-md-offset-8 ">
      <h2>Mois <%= session[:score] %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4">
      <p class="bg-danger" id="notice"><%= notice %></p>
        <div class="gauge">
          <div class="icon budget text-center" title="Indique la bonne santé de votre budget">
            <p><%= session[:budget_gauge] %>%</p>
                <%= image_tag("eco.svg", :alt => "eco feed") %>
          </div>
          <div class="icon employer text-center" title="Indique l'état de vos relations avec le patronnat">
            <p><%= session[:employers_gauge] %>% </p>
            <%= image_tag("patronnat.svg", :alt => "patronnat feed") %>
          </div>
            <div class="icon population text-center" title="Indique votre cote de populatité auprès du peuple">
            <p><%= session[:population_gauge] %>% </p>
            <%= image_tag("peuple.svg", :alt => "peuple feed") %>
        </div>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="card vertical-center center-text">
        <%= image_tag @card.image.url(:medium), class: "center-block" %>
        <h1 >
          <%= @card.title %>
        </h1>
        <p>
          <%= @card.desc %>
        </p>
          <%= link_to 'Oui', oui_path(@card), class: "btn btn-lg btn-primary btn-green" %>
          <%= link_to 'Non', non_path(@card), class: "btn btn-lg btn-primary btn-green" %>

      </div>
    </div>
  </div>
      </div>

    </div>
  </div>
</div>
