<div class="row">
  <div class="col-xs-12">
    <a href="/" class="btn btn-default btn-green return">
      <i class="fa fa-arrow-left"></i>Retour Ã  l'accueil</a>
  </div>
</div>
<div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1 social-login">
  <%= render "devise/shared/sociallinks" %>
</div>
<div class="row"><%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1 vcenter signup-form"}) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign up</h2>
  <div class="form-group">
    <%= f.label "Courriel" %><br/>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "Mot de passe" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>
      characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>
  <%= render "devise/shared/links" %>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default btn-green" %>
  </div>
  <% end %>

</div>
